{
  "name": "my-plex-bot",
  "version": "1.0.0",
  "description": "Bot de Telegram para gestionar e interactuar con tu servidor multimedia Plex, construido con TypeScript y Telegraf.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsup src/bot.ts --watch --onSuccess \"node dist/bot.js\"",
    "build": "tsup src/bot.ts",
    "start": "node dist/bot.js",
    "format": "prettier --write .",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "plex",
    "media-server",
    "typescript",
    "telegraf"
  ],
  "author": "rperezll",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rperezll/my-plex-bot"
  },
  "bugs": {
    "url": "https://github.com/rperezll/my-plex-bot/issues"
  },
  "homepage": "https://github.com/rperezll/my-plex-bot",
  "dependencies": {
    "better-sqlite3": "11.10.0",
    "dotenv": "16.5.0",
    "telegraf": "4.16.3",
    "xml2js": "0.6.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "@types/node": "22.15.21",
    "@types/xml2js": "0.4.14",
    "@typescript-eslint/eslint-plugin": "8.32.1",
    "@typescript-eslint/parser": "8.32.1",
    "eslint": "9.27.0",
    "prettier": "3.5.3",
    "tsup": "8.5.0",
    "typescript": "5.8.3"
  }
}
